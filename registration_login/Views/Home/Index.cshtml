@model registration_login.Models.User;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Register</title>
</head>
    <body>
        <div class=cointainer>
            <div class="col-4">
                <div class=registration>
                    <form class="row g-3" asp-action="Register">
                        <h1>Register</h1>
                        <div class="col-md-6">
                            <span asp-validation-for="FirstName"></span>
                            <label asp-for="FirstName" class="form-label" name="FirstName"></label>
                            <input asp-for="FirstName">
                        </div>

                        <div class="col-md-6">
                            <span asp-validation-for="LastName"></span>
                            <label asp-for="LastName" class="form-label" name="LastName"></label>
                            <input asp-for="LastName">
                        </div>

                        <div class="col-md-6">
                            <span asp-validation-for="Email"></span>
                            <label asp-for="Email" class="form-label" name="Email"></label>
                            <input asp-for="Email">
                        </div>

                        <div class="col-md-6">
                            <span asp-validation-for="Password"></span>
                            <label asp-for="Password" class="form-label" name="Password"></label>
                            <input asp-for="Password">
                        </div>

                        <div class="col-md-6">
                            <span asp-validation-for="Confirm"></span>
                            <label asp-for="Confirm" class="form-label" name="Confirm"></label>
                            <input asp-for="Confirm">
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary">Sign up Now</button>
                        </div>
                    </form>
                        <a href="/Login">Log-in</a>
                </div>
            </div>
        </div>
    </body>
</html>