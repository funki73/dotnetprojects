@model crudelicious.Dish;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 
    <title>CRUDelicious</title>
</head>
<body>
    <div class = "container mt-5">
        <h1>Add a new Dish!</h1>
        <div class = "navbar">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
        </div>
        <div class="col-4">
            <div class="main">
                <form class="row g-3" asp-action="SurveySubmission">
                    <div class="col-md-6">
                        <span asp-validation-for="Chef"></span>
                        <label asp-for="Chef" class="form-label" name="Chef"></label>
                        <input asp-for="Chef">
                    </div>
                    <div class="col-md-6">
                        <span asp-validation-for="DishName"></span>
                        <label asp-for="DishName" class="form-label" name="DishName"></label>
                        <input asp-for="DishName">
                    </div>
                    <div class="col-md-6">
                        <span asp-validation-for="NumCalories"></span>
                        <label asp-for="NumCalories" class="form-label" name="NumCalories"></label>
                        <input asp-for="NumCalories">
                    </div>
                    <div class="col-md-12">
                        <span asp-validation-for="Tastiness"></span>
                        <label for="floatingInput" asp-for="Tastiness"></label>
                        <select asp-for="Tastiness" class="form-select" class="input-group-text" for="inputGroupSelect01">
                            <option selected></option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            </select>
                    </div>
                    <div class="col-md-12">
                        <span asp-validation-for="Description"></span>
                        <label for="Description" class="form-label" name="Description" asp-for="Description"></label>
                        <textarea type="text" class="form-control" asp-for="Description" rows="3"></textarea>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>