@using onetomany.Models;
@model IndexView;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 

    <title>Dishes</title>
</head>
    <body>
        <div class = "container mt-5"> 
            <div class = "navbar">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <h1>Dishes</h1>
                        <a class="nav-link" href="/">Chefs</a>
                        <a class="nav-link">Dishes</a>
                        <a class="nav-link" href="/newdishes">Add a Dish</a>
                    </li>
            </div>
            <div class = "main">
                <h1>Check out our roster of Chefs!</h1>
                <table>
                    <thead>
                            <tr>
                                <th>Name</th>
                                <th>Chef</th>
                                <th>Tastiness</th>
                                <th>Calories</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Dish dish in Model.AllDishes)
                            {
                                <tr>
                                    <td>@dish.DishName</td>
                                    <td>@dish.ChefId</td>
                                    <td>@dish.Tastiness</td>
                                    <td>@dish.NumCalories</td>
                                </tr>
                            }
                        </tbody>
                </table>
            </div>
        </div>
    </body>
</html> 