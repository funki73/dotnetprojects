@using onetomany.Models;
@model IndexView;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 

    <title>Chefs</title>
</head>
    <body>
        <div class = "container mt-5">
            <div class = "navbar">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <h1>Chefs</h1>
                        <a class="nav-link">Chef</a>
                        <a class="nav-link" href="/dishes">Dishes</a>
                        <a class="nav-link" href="/newchef">Add a Chef</a>
                    </li>
            </div>
            <div class = "main">
                <h1>Check out our roster of Chefs!</h1>
                <table>
                    <thead>
                            <tr>
                                <th>Name</th>
                                <th>Age</th>
                                <th># of dishes created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Chef chef in Model.AllChefs)
                            {
                                DateTime today = DateTime.Today;
                                int age = today.Year - chef.Dateofbirth.Year;
                                <tr>
                                    <td>@chef.FirstName @chef.LastName</td>
                                    <td>@chef.Dateofbirth</td>
                                    <td>@chef.CreatedDishes.Count</td>
                                </tr>
                            }
                        </tbody>
                </table>
            </div>
        </div>
    </body>
</html>