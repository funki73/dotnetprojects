@model onetomany.Models.Chef;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 

    <title>New Chef</title>
</head>
    <body>
        <div class = "container mt-5">
            <h1>Add a Chef!</h1>
            <div class = "navbar">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
            </div>
            <div class="col-4">
                <div class="main">
                    <form class="row g-3" asp-action="Newchefs">
                        <div class="col-md-6">
                            <span asp-validation-for="FirstName"></span>
                            <label asp-for="FirstName" class="form-label" name="FirstName"></label>
                            <input asp-for="FirstName">
                        </div>

                        <div class="col-md-6">
                            <span asp-validation-for="LastName"></span>
                            <label asp-for="LastName" class="form-label" name="LastName"></label>
                            <input asp-for="LastName">
                        </div>

                        <div class="col-md-12">
                            <span asp-validation-for="Dateofbirth"></span>
                            <label asp-for="Dateofbirth" class="form-label" name="Dateofbirth"></label>
                            <input asp-for="Dateofbirth">
                        </div>

                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">Add Chef</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>