@using productsandcategories.Model;
@model Products;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 
    <title>Products</title>
</head>
    <body>
        <div class = "container mt-5">
            <div class="navbar">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <h1><b><a class="nav-link">Products</a></b></h1>
                    </li>
                    <li class="nav-item">
                        <h1><a class="nav-link" href="/categories">Categories</a></h1>
                    </li>
                </ul>
            </div>


            <div class="main">
                <div class="form">
                    <h2>New Products</h2>
                    <form class="row g-3" asp-action="newProduct">
                        <div class="question">
                            <span asp-validation-for="Name"></span>
                            <label asp-for="Name" class="form-label" name="Name">Name: </label>
                            <input asp-for="Name">
                        </div>

                        <div class="question">
                            <span asp-validation-for="Description"></span>
                            <label asp-for="Description" class="form-label" name="Description">Description: </label>
                            <input asp-for="Description">
                        </div>

                        <div class="Price">
                            <span asp-validation-for="Price"></span>
                            <label asp-for="Price" class="form-label" name="Price">Price: </label>
                            <input asp-for="Price">
                        </div>

                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="list">
                <h2>Existing Products</h2>
                @foreach (Products prod in Model.AllProducts)
                {
                    <li>
                    <a href="products/@prod.ProductId">@prod.Name</a>
                    </li>
                }
            </div>
        </div>
    </body>
</html>