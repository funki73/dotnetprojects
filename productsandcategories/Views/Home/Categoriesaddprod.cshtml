@using productsandcategories.Model;
@model Categoryview;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 
    <title>Products</title>
</head>
    <body>
        @{
            Associations AddForm = Model.AddForm;
            List<Products> ToAdd = Model.ToAdd;

        }
        <div class = "container mt-5">
            <h1>@Model.ToRender.Name</h1>
            <div class="list">
            <h2>Categories</h2>
            @foreach (Associations prod in Model.ToRender.AssignedProducts)
            {
                <tr>
                    <td>@prod.ProdwithCat.Name</td>
                </tr>
            }
            </div>
            <div class="main">
                <div class="form">
                    <h2>Add Product</h2>
                    <form class="row g-3" asp-action="addProduct">
                        <div class="question">
                            <label for="floatingInput" asp-for="@AddForm.ProductId"></label>
                            <select asp-for="@AddForm.ProductId" class="input-group-text" for="inputGroupSelect01">
                                @foreach(Products prod in ToAdd)
                                {
                                    <option value="@prod.ProductId">@prod.Name</option>
                                }
                            </select> 
                            <input type="hidden" asp-for="@AddForm.ProductId" value="@Model.ToRender.CategoryId">
                            <input type="submit" value="Add">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>