@model dojo_survey_with_models.Controllers.Survey;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Dojo Survey Index</title>
</head>
<body>
    
    <div class = "container mt-5">
        <h1>Dojo Survey</h1>
        <form class="row g-3" asp-action="SurveySubmission">
            <div class="col-md-6">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name" class="form-label" name="Name"></label>
                <input asp-for="Name">
                
            </div>
            <div class="col-md-12">
                <span asp-validation-for="Dojolocation"></span>
                <label for="floatingInput" asp-for="Dojolocation"></label>
                <select asp-for="Dojolocation" class="form-select" class="input-group-text" for="inputGroupSelect01">
                    <option selected></option>
                    <option value="Seattle">Seattle</option>
                    <option value="Bellevue">Bellevue</option>
                    </select>
            </div>
            <div class="col-md-12">
                <span asp-validation-for="Favoritelanguage"></span>
                <label for="floatingInput" asp-for="Favoritelanguage"></label>
                <select asp-for="Favoritelanguage" class="form-select" id="dojolocation" class="input-group-text" for="inputGroupSelect01">
                    <option selected></option>
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    </select>
            </div>
            <div class="col-md-12">
                <span asp-validation-for="Comments"></span>
                <label for="comments" class="form-label" name="comments" asp-for="Comments"></label>
                <textarea type="text" class="form-control" asp-for="Comments" rows="3"></textarea>
            </div>

            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
    </div>
</body>
</html>